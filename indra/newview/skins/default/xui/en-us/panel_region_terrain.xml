     label_width="120"
     layout="topleft"
     left="15"
     max_val="100"
     min_val="0"
     name="water_height_spin"
     bottom="-60"
     width="180" />
    <button
     bottom_delta="3"
     follows="left|top"
     font="SansSerifSmall"
     height="18"
     label="?"
