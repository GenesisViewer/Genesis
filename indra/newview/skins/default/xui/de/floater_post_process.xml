<floater name="Post-Process Floater" title="Post-Processing-Einstellungen">
	<tab_container name="Post-Process Tabs">
		<panel label="Farbfilter" name="ColorFilterPanel">
			<check_box label="Ein" name="enable_color_filter"/>
			<text name="ColorFilterGammaText">Gamma</text>
			
			<text name="ColorFilterBrightnessText">Helligkeit</text>
			
			<text name="ColorFilterSaturationText">Sättigung</text>
			
			<text name="ColorFilterContrastText">Kontrast</text>
			
			<text name="ColorFilterBaseText">Kontrast Grundfarben</text>
			<slider label="R" name="contrast_base[0]"/>
			<slider label="G" name="contrast_base[1]"/>
			<slider label="B" name="contrast_base[2]"/>
			<slider label="I" name="contrast_base[3]"/>
		</panel>
		<panel label="Gausssche Unschärfe" name="GaussBlurPanel">
			<check_box label="Ein" name="enable_gauss_blur"/>
			<text name="GaussBlurPassesText">Durchgänge anzuwenden</text>
			
		</panel>
		<panel label="Nachtsicht" name="NightVisionPanel">
			<check_box label="Ein" name="enable_night_vision"/>
			<text name="NightVisionBrightMultText">Lichtverstärkungsmultiplikator</text>
			
			<text name="NightVisionNoiseSizeText">Rauschen-Größe</text>
			
			<text name="NightVisionNoiseStrengthText">Rauschen-Stärke</text>
			
		</panel>
		<panel label="Posterisieren" name="PosterizePanel">
			<check_box label="Ein" name="enable_posterize"/>
			<text name="PosterLayersText">Ebenenanzahl</text>
			
		</panel>
		<panel label="Bewegungsunschärfe" name="MotionBlurPanel">
			<check_box label="Ein" name="enable_motionblur"/>
			<text name="MotionBlurText">Bewegungsunschärfen-Stärke</text>
			
		</panel>
    <panel label="Vignettierung" name="VignettePanel">
      <check_box label="Ein" name="enable_vignette"/>
      <text name="VignetteStrengthText">Stärke</text>
      
      <text name="VignetteRadiusText">Radius</text>
      
      <text name="VignetteDarknessText">Dunkelheit</text>
      
      <text name="VignetteDesaturateText">Entsättigungsstärke</text>
      
      <text name="VignetteChormaticAberrationText">Farbabweichung</text>
      
    </panel>
