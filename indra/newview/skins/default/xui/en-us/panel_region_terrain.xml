<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="top|left"
 help_topic="panel_region_terrain_tab"
 label="Terrain"
 layout="topleft"
 left="0"
 name="Terrain"
 bottom="0"
 height="320"
 width="480">
    <text
     follows="left|top"
     font="SansSerif"
     height="20"
